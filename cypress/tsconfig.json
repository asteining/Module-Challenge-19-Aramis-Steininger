{
    "compilerOptions": {
      "composite": true,
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "types": ["cypress", "node"],
      "jsx": "react-jsx", // Use the new JSX transform
      "isolatedModules": false,
      "noEmit": true,
      "strict": true
    },
    "include": [
      "../client/src/components/**/*.tsx", // Include the Quiz.tsx file
      "e2e/**/*.ts",
      "e2e/**/*.tsx",
      "e2e/**/*.js",
      "e2e/**/*.jsx",
      "component/**/*.ts",
      "component/**/*.tsx",
      "component/**/*.js",
      "component/**/*.jsx"
    ],
    "exclude": ["node_modules"]
  }